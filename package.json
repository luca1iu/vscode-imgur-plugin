{
  "name": "imgur-uploader",
  "displayName": "Imgur Uploader",
  "description": "Upload images to Imgur from VS Code",
  "version": "0.0.1",
  "publisher": "luca1iu",
  "repository": {
    "type": "git",
    "url": "https://github.com/luca1iu/vscode-imgur-plugin"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.uploadImage",
        "title": "Upload Image"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Imgur Uploader Configuration",
      "properties": {
        "imgurUploader.clientId": {
          "type": "string",
          "default": "",
          "description": "Your Imgur Client ID. Find your existing Client ID at https://imgur.com/account/settings/apps or follow the instructions to generate new Client ID."
        },
        "imgurUploader.authenticated": {
          "type": "boolean",
          "default": false,
          "description": "Enable authenticated upload to Imgur. Your images will be uploaded to your Imgur account."
        }
      }
    },
    "keybindings": [
      {
        "command": "editor.action.clipboardPasteAction",
        "key": "ctrl+v",
        "mac": "cmd+v",
        "when": "editorTextFocus && !editorReadonly"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "clipboardy": "^4.0.0",
    "@types/node": "^16.x"
  }
}
